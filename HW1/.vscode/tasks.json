{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${workspaceRoot}/Code_Template/*.cpp",
                "${workspaceRoot}/Code_Template/Objects/*.cpp",
                "-o",
                "Code_Template/rayTracer",
                "-pthread",
                "-O3"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}